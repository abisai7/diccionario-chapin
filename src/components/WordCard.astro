---
const { word, meaning, slug } = Astro.props;
---

<div
  class="word-card p-4 transition-all duration-200"
  style="background: var(--card); border: 1px solid var(--border); border-radius: var(--radius-lg); box-shadow: 0 1px 2px var(--shadow-sm)"
>
  <h3 class="m-0 mb-1.5 text-lg font-semibold">
    <a href={`/palabras/${slug}`} class="word-title transition-colors" style="color: var(--text)"
      >{word}</a
    >
  </h3>
  <p class="m-0 text-sm leading-relaxed" style="color: var(--muted)">{meaning}</p>
  <a
    href={`/palabras/${slug}`}
    class="word-link mt-2 inline-flex items-center gap-1 text-sm font-medium transition-colors"
    style="color: var(--primary)"
  >
    Ver detalle
    <svg
      width="14"
      height="14"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M5 12h14M12 5l7 7-7 7"></path>
    </svg>
  </a>
</div>

<style>
  .word-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--shadow-md);
  }

  .word-title:hover {
    color: var(--primary) !important;
  }

  .word-link:hover {
    color: var(--primary-light) !important;
  }
</style>
