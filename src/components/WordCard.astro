---
const { word, meaning, slug, lang = "es" } = Astro.props;
const prefix = lang === "en" ? "/en" : "/es";
---

<div
  class="word-card bg-card border-theme shadow-theme-sm rounded-lg border p-4 transition-all duration-200"
  transition:name={`word-card-${slug}`}
>
  <h3 class="m-0 mb-1.5 text-lg font-semibold">
    <a href={`${prefix}/palabras/${slug}`} class="word-title text-theme transition-colors">{word}</a
    >
  </h3>
  <p class="text-secondary m-0 text-sm leading-relaxed">{meaning}</p>
  <a
    href={`${prefix}/palabras/${slug}`}
    class="word-link text-primary-light mt-2 inline-flex items-center gap-1 text-sm font-medium transition-colors"
  >
    {lang === "en" ? "View details" : "Ver detalle"}
    <svg
      width="14"
      height="14"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path d="M5 12h14M12 5l7 7-7 7"></path>
    </svg>
  </a>
</div>

<style>
  .word-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--shadow-md);
  }

  .word-title:hover {
    color: var(--primary) !important;
  }

  .word-link:hover {
    color: #6bb6e8 !important;
    text-decoration: underline;
  }
</style>
