---
import { useTranslations } from "../../utils/i18n";

interface Props {
  lang: string;
  siteUrl: string | URL;
}

const { lang, siteUrl } = Astro.props;
const t = useTranslations(lang);

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: t("schema.site.name"),
  alternateName: t("schema.site.alternateName"),
  url: siteUrl.toString(),
  logo: new URL("/favicon.svg", siteUrl).toString(),
  description: t("schema.site.description"),
  sameAs: ["https://github.com/abidondigital/diccionario-chapin"],
  knowsLanguage: ["es", "en"],
  areaServed: {
    "@type": "Country",
    name: "Guatemala",
  },
};
---

<script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
