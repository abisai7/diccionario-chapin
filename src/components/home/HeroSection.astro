---
import SearchBox from "../SearchBox.astro";
import { useTranslations } from "../../utils/i18n";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="mx-auto max-w-[1100px]">
  <div class="card-with-gradient shadow-theme-lg m-6 grid gap-3.5 backdrop-blur-sm">
    <h1 class="gradient-text mx-4 mt-4 text-[clamp(1.8rem,2.4vw,2.6rem)]">
      {t("home.title")}
    </h1>
    <p class="text-muted mx-4 text-base">
      {t("home.subtitle")}
    </p>
    <div class="mx-4 grid grid-cols-1">
      <SearchBox placeholder={t("home.search.placeholder")} />
    </div>
    <div
      class="border-theme bg-glow-primary text-muted mx-4 mb-4 rounded-lg border px-3 py-2 text-sm backdrop-blur-sm"
    >
      <span class="inline-flex items-center gap-2">
        <svg
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <circle cx="12" cy="12" r="10"></circle>
          <path d="M12 16v-4M12 8h.01"></path>
        </svg>
        {t("home.search.tip")}
        <kbd
          class="bg-card border-theme text-theme mx-1 rounded-sm border px-2 py-0.5 font-mono text-xs"
          >/</kbd
        >
        {t("home.search.tip2")}
      </span>
    </div>
  </div>
</section>
